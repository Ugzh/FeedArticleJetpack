<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FeedArticleJetpack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColor">@color/blue</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="Theme.FeedArticleJetpack" parent="Base.Theme.FeedArticleJetpack" />


    <style name="AppNameTitleTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ButtonStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:elevation">20dp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>
</resources>